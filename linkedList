import java.util.LinkedList;

public class LinkedlistCarros {
    public static void main(String[]args){
        /* O LINKEDLIST PODE ADICIONAR NO COMEÇO E NO FIM 
         * addFirst()
         * addLast()
         * removeFirst()
         * removeLast()
         * getFirst()
         * getLast()
         */
        LinkedList<String> cars = new LinkedList<>();
        cars.add("Volvo");
        cars.add("BMW");
        cars.add("Ford");

        //incluindo Mazda no inicio
        cars.addFirst("Mazda");
        System.out.println(cars);

        //incluindo Bugatti no fim
        cars.addLast("Bugatti");
        System.out.println(cars);

        String carro = cars.get(3); //QUERO SABER QUAL CARRO ESTÁ NA POSIÇÃO 3
        System.out.println("Carro na posição 3: " + carro);

        //removendo o primeiro
        cars.removeFirst();
        System.out.println(cars);

        //paga o primeiro
        System.out.println(cars.getFirst());
        System.out.println(cars);

        
          //removendo o ultimo
        cars.removeLast();
        System.out.println(cars);


        //paga o ULTIMO
        System.out.println(cars.getLast());
        System.out.println(cars);

        cars.clear();
        if (cars.isEmpty()) {
            System.out.println("A lista está vazia");
        }
    }
}
